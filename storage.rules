rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      // Allow read only for authenticated users
      // Files are encrypted end-to-end so even if accessed, they cannot be decrypted without the key
      allow read: if request.auth != null;

      // Allow write if the user is authenticated, matches the userId, AND file is under 50MB
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024;
    }
  }
}
