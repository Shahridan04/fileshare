rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      // Allow public read (for sharing via links)
      // This is safe because files are encrypted end-to-end
      allow read: if true;

      // Allow write if the user is authenticated and matches the userId
      allow write: if request.auth != null && request.auth.uid == userId;

      // Additional size limit (50MB)
      allow write: if request.resource.size < 50 * 1024 * 1024;
    }
  }
}
